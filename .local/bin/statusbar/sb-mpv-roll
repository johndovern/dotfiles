#!/bin/bash

while [[ "$(pgrep -c sb-mpv-roll)" -gt 1 ]] ; do
    kill $(pgrep -o sb-mpv-roll)
done

case "${1}" in
    -m)
        while :; do
            kill -55 $(pidof dwmblocks)
            sleep 1
        done
        ;;
    *)
        while :; do
            kill -56 $(pidof dwmblocks)
            sleep 1
        done
        ;;
esac
