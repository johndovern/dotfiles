#!/bin/bash

[[ "$(pgrep -c sb-mpv-roll)" -gt 1 ]] && {
    for pid in pgrep sb-mpv-roll; do
        [[ "$pid" == "$$" ]] && continue
        kill "$pid"
    done
}

case "${1}" in
    -m)
        while :; do
            kill -55 "$(pidof dwmblocks)"
            sleep 1
        done
        ;;
    *)
        while :; do
            kill -56 "$(pidof dwmblocks)"
            sleep 1
        done
        ;;
esac
