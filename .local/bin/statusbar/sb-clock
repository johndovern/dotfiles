case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..0m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
