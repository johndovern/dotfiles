#!/bin/sh

xres="$XDG_CONFIG_HOME/x11/xresources"

# turn light theme on
if  cat ${xres} | grep 'Light Theme Off' >/dev/null 2>&1 ; then
  sed -i '
  42s/\!! Light Theme Off/\!! Light Theme On/
  43,78s/\!//
  80s/\!! Dark Theme On/\!! Dark Theme Off/
  81,116s/\(^.*$\)/\!\1/
  ' "$xres"
  notify-send "light theme on"
  xrdb "${xres}"

# turn dark theme on
elif  cat ${xres} | grep 'Dark Theme Off' >/dev/null 2>&1 ; then
  sed -i '
  42s/\!! Light Theme On/\!! Light Theme Off/
  43,78s/\(^.*$\)/\!\1/
  80s/\!! Dark Theme Off/\!! Dark Theme On/
  81,116s/\!//
  ' "$xres"
  notify-send "dark theme on"
  xrdb "${xres}"
fi
