#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "🔒 lock\n🚪 leave dwm\n♻️ renew dwm\n🐻 hibernate\n💤 sleep\n🔃 reboot\n🔌shutdown\n📺 display off" | dmenu -i -p 'Action: ')" in
	'🔒 lock') slock ;;
	'🚪 leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'♻️ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'🐻 hibernate') slock $ctl hibernate ;;
	'💤 sleep') slock $ctl suspend ;;
	'🔃 reboot') st -e key-zip reboot ;;
	'🔌shutdown') st -e key-zip shutdown ;;
	'📺 display off') xset dpms force off ;;
	*) exit 1 ;;
esac
