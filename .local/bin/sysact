#!/bin/bash
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
  *systemd*) ctl='systemctl' ;;
  *) ctl='loginctl' ;;
esac

actions=(
  "Lock"
  "Leave dwm"
  "Reboot"
  "Hibernate"
  "Sleep"
  "Renew dwm"
  "Shutdown"
  "Safe Shutdown"
  "Display off"
)

[ "$#" -eq 1 ] && SYS_ACTION="$1"
[ "$#" -eq 0 ] && SYS_ACTION="$(printf '%s\n' "${actions[@]}" | dmenu -i -p 'Action:')"
[[ ! "${actions[*]}" =~ "$SYS_ACTION" ]] && exit 1

case "$SYS_ACTION" in
  'Lock')
    dmenubluetooth --off
    sleep 0.2
    xset dpms force off
    slock
    ;;
  'Leave dwm')
    kill -TERM "$(pgrep -u "$USER" "\bdwm$")"
    ;;
  'Renew dwm')
    kill -HUP "$(pgrep -u "$USER" "\bdwm$")"
    if xdotool search --name -- "Passwords - KeePassXC" >/dev/null 2>&1; then
      sleep 1 && keepasshide
    fi
    ;;
  'Hibernate')
    slock $ctl hibernate
    ;;
  'Sleep')
    dmenubluetooth --off
    sleep 0.2
    [[ "$(pgrep "transmission")" ]] && pkill transmission && pkill transmission
    slock $ctl suspend
    ;;
  'Reboot')
    st -e key-zip 1
    ;;
  'Shutdown')
    st -e shutdown now
    ;;
  'Safe Shutdown')
    st -e key-zip 0
    ;;
  'Display-off')
    xset dpms force off
    ;;
  *) exit 1 ;;
esac
