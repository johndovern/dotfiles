# ZSH alias' sourced by $HOME/.config/zsh/.zshrc

alias lf="lfrun"
alias suckclean="sudo make clean install"
alias unsuck="sudo make uninstall"
alias lfav="cd ~/videos/wd5t && lfrun"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias suvim='sudo nvim'
alias supi='sudo pacman -S'
alias lsgit='ls -a | sed '1,2d' | sed 's/^/!/' >> .gitignore'
alias config-update='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME add .'
alias config-stat='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME status'
alias config-commit='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME commit -m "update"'
alias config-push='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME push -u origin master'
