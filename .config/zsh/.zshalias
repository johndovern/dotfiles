# ZSH alias' sourced by $HOME/.config/zsh/.zshrc

alias lf="lfrun"
alias suckclean="sudo make uninstall && sudo make clean install && renew-dwm"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias conf-add='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME add .'
alias conf-stat='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME status'
alias conf-commit='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME commit -m "update $(date '+%D-%T')"'
alias conf-push='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME push -u origin desktop'
alias conf-update='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME add -u && /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME commit -m "update $(date '+%D-%T')" && /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME push -u origin desktop'
alias conf-add='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME add . && /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME commit -m "update" && /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME push -u origin desktop'
alias rsync2='rsync --info=progress2 --partial -auvzs'
alias debsync='rsync -avP'
alias test-txt='nvim test.txt'
alias cht='cht.sh'
alias fmpv='mpv --x11-name=fmpv'
alias fst='setsid -f st >/dev/null 2>&1'
alias rereflect='sudo systemctl restart reflector.service'
alias resys='sudo systemctl restart'
alias statsys='sudo systemctl status'
alias stopsys='sudo systemctl stop'
alias killsys='sudo systemctl kill'
alias startsys='sudo systemctl start'
alias ensys='sudo systemctl enable'
alias fsys='systemctl --failed'
alias usys='systemctl --user'
alias uresys='systemctl --user restart'
alias ustatsys='systemctl --user status'
alias ustopsys='systemctl --user stop'
alias killsys='systemctl --user kill'
alias ustartsys='systemctl --user start'
alias uensys='systemctl --user enable'
alias tks='tmux kill-session'
alias tls='tmux ls'
alias ets='nvim ~/.local/bin/scripts/tscript'
alias se='sudoedit'
alias ll='ls -Al'
alias sf='grep -R'
alias pf="printf '%s\n'"
alias km='kill -56 $(pidof dwmblocks)'
alias ani-up='ani-man -u -d'
