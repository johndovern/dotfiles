set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set font "monospace regular 11"
set vertical-center true
set guioptions ""
map u scroll up
map d scroll down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map g goto top
map j scroll half-down
map k scroll half-up
map <Down> scroll half-down
map <Up> scroll half-up
map = zoom in
map + zoom width
map N exec "znp -n '$FILE'"
map P exec "znp -p '$FILE'"
map c exec "dmenumanga --track '$FILE'"
map <C-q> exec "echo '$FILE'"
